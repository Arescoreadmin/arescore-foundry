{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FoundrySnapshot",
  "type": "object",
  "required": ["snapshot_id", "site", "network_segments", "devices", "collected_at"],
  "properties": {
    "snapshot_id": {
      "type": "string",
      "minLength": 1
    },
    "collected_at": {
      "type": "string",
      "format": "date-time"
    },
    "site": {
      "type": "object",
      "required": ["code", "name"],
      "properties": {
        "code": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "metadata": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "network_segments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code", "name"],
        "properties": {
          "code": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "cidr": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          }
        },
        "additionalProperties": false
      }
    },
    "devices": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code", "hostname"],
        "properties": {
          "code": {
            "type": "string",
            "minLength": 1
          },
          "hostname": {
            "type": "string",
            "minLength": 1
          },
          "ip_address": {
            "type": "string"
          },
          "device_type": {
            "type": "string"
          },
          "segment_code": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          }
        },
        "additionalProperties": false
      }
    },
    "metadata": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
