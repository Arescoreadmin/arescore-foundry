@'
# Normalize text and commit as LF by default
*           text=auto eol=lf

# Code & config as LF
*.py        text eol=lf
*.sh        text eol=lf
*.yml       text eol=lf
*.yaml      text eol=lf
*.json      text eol=lf
*.toml      text eol=lf
*.md        text eol=lf
Dockerfile  text eol=lf
Makefile    text eol=lf

# Windows scripts keep CRLF
*.ps1       text eol=crlf
*.bat       text eol=crlf
'@ | Set-Content -Encoding utf8NoBOM .gitattributes

git add .gitattributes
git add --renormalize .
git commit -m "repo: fix .gitattributes and renormalize line endings"
git push
